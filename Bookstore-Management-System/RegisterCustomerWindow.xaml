<Window x:Class="Bookstore_Management_System.RegisterCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_Management_System"
        mc:Ignorable="d"
        Title="Регистрация покупателя" Height="550" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="Регистрация покупателя" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />

            <!-- Поля для ввода данных -->        
            <TextBlock Text="Фамилия:" />
            <TextBox x:Name="LastNameTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Имя:" />
            <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,10" />
            
            <TextBlock Text="Город:" />
            <TextBox x:Name="CityTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Адрес:" />
            <TextBox x:Name="AddressTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Имя пользователя" Margin="5" FontWeight="Bold" FontSize="14" />
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="5" HorizontalAlignment="Left" ToolTip="Имя пользователя"/>

            <TextBlock Text="Пароль" Margin="5" FontWeight="Bold" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5" HorizontalAlignment="Left" ToolTip="Пароль" />


            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Зарегистрировать" Width="120" Margin="5" Click="RegisterButton_Click" />
                <Button Content="Отмена" Width="120" Margin="5" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
