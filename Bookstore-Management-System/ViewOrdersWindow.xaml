<Window x:Class="Bookstore_Management_System.ViewOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookstore_Management_System"
        mc:Ignorable="d"
        Title="Управление заказами" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        Background="#FFF5F5F5">

    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12 4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>


        
        <DropShadowEffect x:Key="MaterialDesignShadowDepth1" 
                    BlurRadius="8" 
                    ShadowDepth="1" 
                    Opacity="0.2"/>
    
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров и статистики -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15">
            <ComboBox x:Name="StatusFilterComboBox"
                    Width="200"
                    Margin="0 0 20 0"
                    FontSize="14"
                    SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                <ComboBoxItem Content="Ожидание"/>
                <ComboBoxItem Content="Ожидает оплаты"/>
                <ComboBoxItem Content="Оплачен"/>
                <ComboBoxItem Content="Завершен"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Позиций: " 
                         FontSize="14"
                         FontWeight="Bold"/>
                <TextBlock x:Name="TotalItemsText" 
                         Text="0" 
                         Margin="5 0 15 0"
                         Foreground="#FF1E90FF"
                         FontSize="14"
                         FontWeight="Bold"/>

                <TextBlock Text="Общая сумма: " 
                         FontSize="14"
                         FontWeight="Bold"/>
                <TextBlock x:Name="TotalAmountText" 
                         Text="0" 
                         Margin="5 0 0 0"
                         Foreground="#FF32CD32"
                         FontSize="14"
                         FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Background="Transparent">
            <!-- Активные заказы -->
            <TabItem Header="Активные" FontSize="14">
                <ListView x:Name="ActiveOrdersListView" 
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectionMode="Extended">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                  CornerRadius="8" 
                                  Padding="15" 
                                  Margin="0 5"
                                  Effect="{StaticResource MaterialDesignShadowDepth1}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Информация о товаре -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Books.Title}" 
                                                 FontSize="16" 
                                                 FontWeight="DemiBold"/>
                                        <TextBlock Text="{Binding Books.Author}" 
                                                 FontSize="14" 
                                                 Foreground="#FF666666"
                                                 Margin="0 2 0 5"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Кол-во: " 
                                                     FontSize="14"/>
                                            <TextBox Text="{Binding Quantity}" 
                                                   Width="40" 
                                                   Margin="5 0"
                                                   Padding="2"
                                                   TextAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Price}" 
                                                 FontSize="14"
                                                 Margin="0 5 0 0"/>
                                    </StackPanel>

                                    <!-- Метаданные заказа -->
                                    <StackPanel Grid.Column="1" Margin="20 0">
                                        <TextBlock Text="{Binding Order.OrderDate}" 
                                                 FontSize="12"
                                                 Foreground="#FF888888"
                                                 Margin="0 5"/>
                                        <TextBlock Text="{Binding Order.Status}" 
                                                FontSize="14"
                                                Foreground="#FF1E90FF"
                                                FontWeight="DemiBold"/>       
                                    </StackPanel>

                                    <!-- Управление -->
                                    <Button Grid.Column="2" 
                                          Style="{StaticResource IconButton}"
                                          Click="DeleteButton_Click"
                                          ToolTip="Удалить позицию">
                                        <Image Source="/Icons/delete.png" 
                                             Width="24" 
                                             Height="24"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>

            <!-- Архивные заказы -->
            <TabItem Header="Архив" FontSize="14">
                <ListView x:Name="ArchivedOrdersListView" 
                        BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                  CornerRadius="8" 
                                  Padding="15" 
                                  Margin="0 5"
                                  Effect="{StaticResource MaterialDesignShadowDepth1}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Информация о товаре -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Books.Title}" 
                                                 FontSize="16" 
                                                 FontWeight="DemiBold"/>
                                        <TextBlock Text="{Binding Books.Author}" 
                                                 FontSize="14" 
                                                 Foreground="#FF666666"/>
                                        <TextBlock Text="{Binding Quantity}" 
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Price}" 
                                                 FontSize="14"/>
                                    </StackPanel>

                                    <!-- Метаданные -->
                                    <StackPanel Grid.Column="1" Margin="20 0">
                                        <TextBlock Text="{Binding Order.Status}" 
                                                 FontSize="14"
                                                 Foreground="#FF32CD32"
                                                 FontWeight="DemiBold"/>
                                        <TextBlock Text="{Binding Order.OrderDate}" 
                                                 FontSize="12"
                                                 Foreground="#FF888888"/>
                                        <TextBlock Text="{Binding Order.TotalAmount}" 
                                                 FontSize="14"
                                                 Margin="0 5"
                                                 FontWeight="DemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right"
                  Margin="0 15 0 0">
            <Button x:Name="CheckoutButton" 
                  Content="Оформить заказ" 
                  Style="{StaticResource PrimaryButton}"
                  Width="150"
                  Click="CheckoutButton_Click"
                  Margin="0 0 10 0"/>

            <Button x:Name="PayButton" 
                  Content="Оплатить" 
                  Style="{StaticResource PrimaryButton}"
                  Width="120"
                  Click="PayButton_Click" Background="Green"/>
        </StackPanel>
    </Grid>
</Window>